{
  "name": "querycanvas",
  "displayName": "QueryCanvas - AI-Powered Database Client",
  "description": "Cursor-integrated database client with smart SQL formatting and display customization",
  "version": "0.1.0",
  "publisher": "okuyamashin",
  "icon": "icon.png",
  "author": {
    "name": "okuyamashin"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/okuyamashin/querycanvas.git"
  },
  "bugs": {
    "url": "https://github.com/okuyamashin/querycanvas/issues"
  },
  "homepage": "https://github.com/okuyamashin/querycanvas#readme",
  "keywords": [
    "database",
    "sql",
    "mysql",
    "postgresql",
    "cursor",
    "ai",
    "database-client",
    "query",
    "data-visualization"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Data Science",
    "Other"
  ],
  "activationEvents": [
    "onCommand:querycanvas.open"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "querycanvas.open",
        "title": "QueryCanvas: Open Database Client"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-i18n",
    "copy-i18n": "mkdir -p out/i18n && cp src/i18n/*.json out/i18n/",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/pg": "^8.16.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "mysql2": "^3.16.0",
    "pg": "^8.16.3"
  }
}
